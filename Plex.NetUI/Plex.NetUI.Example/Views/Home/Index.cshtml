@using Plex.NetUI.Components
@using Plex.NetUI.Components.Navigation
@using Plex.NetUI.Components.Table
@{
    ViewData["Title"] = "Home Page";
}

<link href="~/_content/Plex.NetUI/uilibrary.css" rel="stylesheet" />

@{
    var page = new VStack
    {
        ClassName = "vstack",
        Children =
        {
            // Header
            new Navbar("Plex.NetUI Components Demo")
            {
                Children =
                {
                    new Navigation
                    {
                        Children =
                        {
                            new NavItem("Layout", "#layout"),
                            new NavItem("Typography", "#typography"),
                            new NavItem("Cards", "#cards"),
                            new NavItem("Tables", "#tables"),
                            new NavItem("Forms", "#forms"),
                            new NavItem("Media & Links", "#media")
                        }
                    }
                }
            },

            new Container { ClassName = "container", Children =
            {
                // Intro
                new VStack { ClassName = "vstack", Children =
                {
                    new Heading("Welcome to Plex.NetUI", 1),
                    new Text("Browse all built-in components below. This page is composed entirely using C# components and library CSS."),
                }},

                new Divider(),

                // Layout Section
                new VStack { ClassName = "vstack", Children =
                {
                    new Link(" ", "#") // anchor spacing workaround (no custom CSS)
                }},
                new Heading("Layout Components", 2) { },
                new Text("") { },
                new HStack
                {
                    Children =
                    {
                        new Card("HStack (row)")
                        {
                            Children =
                            {
                                new HStack
                                {
                                    Children =
                                    {
                                        new Button("Button 1", "alert('Clicked 1')"),
                                        new Button("Button 2", "alert('Clicked 2')"),
                                        new Button("Button 3", "alert('Clicked 3')")
                                    }
                                },
                                new Divider(),
                                new Text("Items are arranged horizontally with spacing.")
                            }
                        },
                        new Card("VStack (column)")
                        {
                            Children =
                            {
                                new VStack { ClassName = "vstack", Children =
                                {
                                    new Text("Item A"),
                                    new Text("Item B"),
                                    new Text("Item C")
                                }},
                                new Divider(),
                                new Text("Use ClassName = 'vstack' to enable column layout and gaps.")
                            }
                        }
                    }
                },

                new Divider(),

                // Typography Section
                new Heading("Typography", 2) { },
                new VStack { ClassName = "vstack", Children =
                {
                    new Heading("Heading Level 1", 1),
                    new Heading("Heading Level 2", 2),
                    new Heading("Heading Level 3", 3),
                    new Text("This is standard text rendered with the Text component."),
                    new Link("This is a link component", "https://example.com")
                }},

                new Divider(),

                // Cards Section
                new Heading("Cards", 2),
                new HStack
                {
                    Children =
                    {
                        new Card("Simple Card")
                        {
                            Children = { new Text("Cards provide a bordered container with padding and optional title.") }
                        },
                        new Card("Card With Actions")
                        {
                            Children =
                            {
                                new Text("You can place any components inside a card."),
                                new Divider(),
                                new HStack { Children = { new Button("Accept", "alert('Accepted')"), new Button("Cancel", "alert('Cancelled')") } }
                            }
                        }
                    }
                },

                new Divider(),

                // Tables Section
                new Heading("Tables", 2),
                new Table
                {
                    Children =
                    {
                        new TableRow { Children = { new TableHeaderCell("Product"), new TableHeaderCell("Price"), new TableHeaderCell("Category"), new TableHeaderCell("Stock") }},
                        new TableRow { Children = { new TableCell("Laptop"), new TableCell("$999.99"), new TableCell("Electronics"), new TableCell("15") }},
                        new TableRow { Children = { new TableCell("Book"), new TableCell("$19.99"), new TableCell("Education"), new TableCell("50") }},
                        new TableRow { Children = { new TableCell("Coffee Mug"), new TableCell("$12.99"), new TableCell("Kitchen"), new TableCell("100") }}
                    }
                },

                new Divider(),

                // Forms Section
                new Heading("Forms", 2),
                new VStack { ClassName = "vstack", Children =
                {
                    new Form { Children = { new Input("text", "Enter your name"), new Input("email", "Enter your email"), new Input("password", "Enter your password") } },
                    new HStack { Children = { new Button("Submit", "alert('Form submitted!')") } }
                }},

                new Divider(),

                // Media & Links Section
                new Heading("Media & Links", 2),
                new HStack
                {
                    Children =
                    {
                        new Image("https://media.wired.com/photos/5926ffe47034dc5f91bed4e8/3:2/w_2240,c_limit/google-logo.jpg", "Placeholder Image", height: 100, width: 150),
                        new Text("Use Image to embed pictures. Links are standard anchor tags rendered by Link component."),
                        new Link("Visit Example", "https://example.com")
                    }
                }
            }},

            new Divider(),

            // Footer action buttons demo
            new HStack { Children = { new Button("Primary Action", "alert('Primary')"), new Button("Secondary Action", "alert('Secondary')") } }
        }
    };
}

@Html.Raw(page.Render())